        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "966174"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>LIMO</name>

    <description>
        Application connectee aux serveurs LIMO. 
    </description>

    <author href="https://www.limo-vtc.fr" email="support@limo-vtc.fr">
        Support
    </author>
    
